                  "pm.test('分頁大小應正確', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.size).to.equal(50);",
                  "    pm.expect(responseJson.content.length).to.be.at.most(50);",
                  "});",
                  "",
                  "pm.test('分頁號碼應正確', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson.number).to.equal(0);",
                  "});"
