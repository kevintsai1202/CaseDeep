    {
      "name": "佣金詳情查詢測試",
      "item": [
        {
          "name": "根據佣金ID字串查詢詳情 - 正常查詢",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// 檢查是否有測試用的佣金ID",
                  "const commissionIdStr = pm.collectionVariables.get('test_commission_id_str');",
                  "if (!commissionIdStr) {",
                  "    console.log('未找到測試佣金ID，使用預設值');",
                  "    pm.collectionVariables.set('test_commission_id_str', 'CO2501232305');",
                  "}"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('狀態碼應為200或404', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
                  "});",
                  "",
                  "if (pm.response.code === 200) {",
                  "    pm.test('回應應為JSON格式', function () {",
                  "        pm.response.to.be.json;",
                  "    });",
                  "    ",
                  "    pm.test('佣金詳情結構應完整', function () {",
                  "        const responseJson = pm.response.json();",
                  "        pm.expect(responseJson).to.have.property('commissionIdStr');",
                  "        pm.expect(responseJson).to.have.property('orderIdStr');",
                  "        pm.expect(responseJson).to.have.property('templateName');",
                  "        pm.expect(responseJson).to.have.property('orderAmount');",
                  "        pm.expect(responseJson).to.have.property('commissionAmount');",
                  "        pm.expect(responseJson).to.have.property('commissionRate');",
                  "        pm.expect(responseJson).to.have.property('commissionPaymentStatus');",
                  "        pm.expect(responseJson).to.have.property('orderDate');",
                  "        pm.expect(responseJson).to.have.property('orderStatus');",
                  "        pm.expect(responseJson).to.have.property('providerUsername');",
                  "        pm.expect(responseJson).to.have.property('clientUsername');",
                  "    });",
                  "    ",
                  "    pm.test('佣金ID應匹配請求參數', function () {",
                  "        const responseJson = pm.response.json();",
                  "        const requestedId = pm.collectionVariables.get('test_commission_id_str');",
                  "        pm.expect(responseJson.commissionIdStr).to.equal(requestedId);",
                  "    });",
                  "    ",
                  "    pm.test('佣金金額應為正數', function () {",
                  "        const responseJson = pm.response.json();",
                  "        if (responseJson.commissionAmount !== null) {",
                  "            pm.expect(responseJson.commissionAmount).to.be.above(0);",
                  "        }",
                  "    });",
                  "} else if (pm.response.code === 404) {",
                  "    pm.test('404回應應正確', function () {",
                  "        console.log('佣金不存在，這是正常的測試結果');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
