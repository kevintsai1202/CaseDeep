        {
          "name": "取得佣金分頁列表 - 排序測試",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('狀態碼應為200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('排序應正確執行', function () {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.content && responseJson.content.length > 1) {",
                  "        // 檢查佣金金額是否按降序排列",
                  "        for (let i = 0; i < responseJson.content.length - 1; i++) {",
                  "            const current = responseJson.content[i].commissionAmount || 0;",
                  "            const next = responseJson.content[i + 1].commissionAmount || 0;",
                  "            pm.expect(current).to.be.at.least(next);",
                  "        }",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}?page=0&size=20&sort=commissionAmount,desc",
              "host": ["{{base_url}}"],
