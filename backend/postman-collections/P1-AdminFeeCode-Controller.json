{
  "info": {
    "name": "P1 - AdminFeeCode Controller",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Admin Login",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {"raw": "{{baseUrl}}/api/auth/login", "host":["{{baseUrl}}"], "path":["api","auth","login"]},
        "body": {"mode":"raw","raw":"{\n  \"username\": \"{{adminUsername}}\",\n  \"password\": \"{{adminPassword}}\"\n}"}
      },
      "event": [{"listen":"test","script":{"exec":["pm.test('200',()=>pm.response.to.have.status(200)); var j={}; try{j=pm.response.json()}catch(e){}; if(j&&j.token){ pm.environment.set('adminToken', j.token); } pm.expect(pm.environment.get('adminToken')).to.be.ok;"],"type":"text/javascript"}}]
    },
    {
      "name": "Create FeeCode",
      "request": {
        "method": "POST",
        "header": [{"key":"Authorization","value":"Bearer {{adminToken}}"}],
        "url": {"raw": "{{baseUrl}}/api/admin/feecodes/FEE001", "host":["{{baseUrl}}"], "path":["api","admin","feecodes","FEE001"]}
      },
      "event": [{"listen":"test","script":{"exec":["pm.test('201 or 409', function(){ pm.expect([201,409]).to.include(pm.response.code); });"],"type":"text/javascript"}}]
    },
    {
      "name": "List FeeCodes",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{adminToken}}"}],
        "url": {"raw": "{{baseUrl}}/api/admin/feecodes", "host":["{{baseUrl}}"], "path":["api","admin","feecodes"]}
      },
      "event": [{"listen":"test","script":{"exec":["pm.test('200',()=>pm.response.to.have.status(200));"],"type":"text/javascript"}}]
    }
  ]
}

