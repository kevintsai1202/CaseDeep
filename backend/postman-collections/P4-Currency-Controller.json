      "item": [
        {
          "name": "獲取所有貨幣列表",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Response contains currency objects with required fields', function () {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.length > 0) {",
                  "        const currency = responseJson[0];",
                  "        pm.expect(currency).to.have.property('id');",
                  "        pm.expect(currency).to.have.property('currency');",
                  "        pm.expect(currency).to.have.property('currencySymbol');",
                  "        pm.expect(currency.id).to.be.a('number');",
                  "        pm.expect(currency.currency).to.be.a('string');",
                  "        pm.expect(currency.currencySymbol).to.be.a('string');",
                  "    }",
                  "});",
                  "",
                  "pm.test('Response time is less than 2000ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
