                  "pm.test('Response contains created currency data', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.expect(responseJson).to.have.property('id');",
                  "    pm.expect(responseJson).to.have.property('currency');",
                  "    pm.expect(responseJson).to.have.property('currencySymbol');",
                  "    pm.expect(responseJson.currency).to.equal(pm.collectionVariables.get('testCurrencyCode'));",
                  "    pm.expect(responseJson.currencySymbol).to.equal(pm.collectionVariables.get('testCurrencySymbol'));",
                  "});",
                  "",
                  "pm.test('Set currencyId for subsequent tests', function () {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('currencyId', responseJson.id);",
                  "});",
                  "",
                  "pm.test('Response time is less than 3000ms', function () {",
